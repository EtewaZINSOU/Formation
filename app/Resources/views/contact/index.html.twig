{% extends 'layout.html.twig' %}
{% block body %}
    {{ form_start(contact, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(contact) }}

    <div class="divider-new">
        <h2 class="h2-responsive wow fadeInUp">Contact Me</h2>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(contact.name,{'attr': {'class': 'form-control'}}) }}
                    <label for="contact_name">Your name</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-envelope prefix"></i>
                    {{ form_widget(contact.email,{'attr': {'class': 'form-control'}}) }}
                    <label for="contact_email">Your email</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-tag prefix"></i>
                    {{ form_widget(contact.subject,{'attr': {'class': 'form-control'}}) }}
                    <label for="contact_subject">Subject</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-pencil prefix"></i>
                    {{ form_widget(contact.body,{'attr': {'class': 'md-textarea'}}) }}
                    <label for="contact_body">Your message</label>
                </div>
            </div>
        </div>
        {{ form_row(contact._token) }}
        <div class="text-xs-center">
            <button class="btn btn-default"><i class="fa fa-paper-plane prefix"></i>  Envoyer</button>
            <div class="call">
                <br>
                <p>Or would you prefer to call me?
                    <br>
                    <span><i class="fa fa-phone "> </i></span>+ 33 6 52 54 98 59</p>
            </div>
        </div>
        {{ form_end(contact,  {'render_rest': false}) }}
    </div>
    <section id="contact">
        <div class="row">
            <!--First column-->
            <div class="col-md-8">
                <div id="map-container">
                    <script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyD-KmVpPjvyP2JN3mYZmHaI3GlUxRfBTqg'></script>
                    <div style='overflow:hidden;height:400px;width:600px;'>
                        <div id='gmap_canvas' style='height:400px;width:600px;'></div>
                        <style>
                            #gmap_canvas img {
                                max-width: none !important;
                                background: none !important
                            }
                        </style>
                    </div>
                    <a href='http://mapswebsite.net/fr'>http://mapswebsite.net/fr</a>
                    <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=8639ad73becb600fd647df77dcbd0c2cd5442cd7'></script>
                    <script type='text/javascript'>function init_map() {
                            var myOptions = {
                                zoom: 12,
                                center: new google.maps.LatLng(49.048906, 2.035402999999974),
                                mapTypeId: google.maps.MapTypeId.ROADMAP
                            };
                            map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);
                            marker = new google.maps.Marker({
                                map: map,
                                position: new google.maps.LatLng(49.048906, 2.035402999999974)
                            });
                            infowindow = new google.maps.InfoWindow({content: '<strong>Address</strong><br>31 Rue de l\'Aven<br>95800 Cergy<br>'});
                            google.maps.event.addListener(marker, 'click', function () {
                                infowindow.open(map, marker);
                            });
                            infowindow.open(map, marker);
                        }
                        google.maps.event.addDomListener(window, 'load', init_map);</script>
                </div>
            </div>
            <!--/First column-->

            <!--Second column-->
            <div class="col-md-4">
                <ul class="text-xs-center">
                    <li class="wow fadeInUp" data-wow-delay="0.2s"><i class="fa fa-map-marker"></i>
                        <p>31 Rue de l' Aven, France</p>
                    </li>

                    <li class="wow fadeInUp" data-wow-delay="0.3s"><i class="fa fa-phone"></i>
                        <p>+ 33 6 52 54 98 59</p>
                    </li>

                    <li class="wow fadeInUp" data-wow-delay="0.4s"><i class="fa fa-envelope"></i>
                        <p>etewa.zinsou@gmail.com</p>
                    </li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}
