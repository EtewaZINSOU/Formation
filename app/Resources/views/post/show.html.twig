{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Post</h1>
{{ dump(post) }}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ post.text }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ post.categorie }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ post.tags }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ post.comments }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if post.created %}{{ post.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if post.updated %}{{ post.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            {#<tr>#}
                {#<th>Published</th>#}
                {#<td>{% if post.published %}{{ post.published|date('Y-m-d H:i:s') }}{% endif %}</td>#}
            {#</tr>#}
            <tr>
                <th>Author</th>
                <td>{{ post.author }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
<section class="section extra-margins">
    <div class="row">
        <div class="offset-md-1 col-md-2 m-b-r ">
            <a href="{{ path('post_index') }}">
                <i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i>
            </a>
        </div>


        {% if ( app.user != null )  and  ( post.author.id == app.user.id )  %}
            <div class="offset-md-7 col-md-2 m-b-r">
                <a href="{{ path('post_edit', {'id' : post.id}) }}" class="teal-text" style="padding-right: 15px"><i class="fa fa-pencil fa-2x"></i></a>

                <a href="{{ path('post_delete', {'id' : post.id}) }}" class="red-text"><i class="fa fa-times fa-2x"></i></a>
            </div>
        {% endif %}
    </div>
    <hr>

    <!--Section: Blog v.4-->
    <section class="section section-blog-fw">

        <!--Second row-->
        <div class="row">
            <div class="col-md-12">
                <!--Featured image-->
                {#<div class="view overlay hm-white-slight">#}
                    {#<img src="http://mdbootstrap.com/images/slides/slide%20(43).jpg">#}
                    {#<a>#}
                        {#<div class="mask "></div>#}
                    {#</a>#}
                {#</div>#}

                <!--Post data-->
                <div class="jumbotron">
                    <h2><a>{{ post.title }}</a></h2>
                    <p>Written by <a>{{ post.author.lastname }}</a>, {% if post.created %}{{ post.created|date('Y-m-d H:i:s') }}{% endif %}</p>

                    <!--Social shares-->
                    <div class="social-counters ">

                        <!--Comments-->
                        <a class="btn btn-default ">
                            <i class="fa fa-comments-o left "></i>
                            <span class="hidden-md-down ">Comments</span>
                        </a>
                        <span class="counter ">34</span>

                    </div>
                    <!--/.Social shares-->

                </div>
                <!--/Post data-->

                <!--Excerpt-->
                <div class="excerpt">
                    <p>{{ post.text }}</p>

                </div>
            </div>
        </div>
        <!--/Second row-->

        <hr>

    </section>
    </section>
    <!--/Section: Blog v.4-->
{% endblock %}
