{% extends 'layout.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
        {#{{ form_widget(form) }}#}
    <div class="divider-new">
        <h2 class="h2-responsive wow fadeInUp">Creation de post</h2>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(form.title,{'attr': {'class': 'form-control'}}) }}
                    <label for="post_title">Your title</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(form.text,{'attr': {'class': 'md-textarea'}}) }}
                    <label for="post_text">Your text</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(form.tags,{'attr': {'class': 'form-control'}}) }}
                    <label for="post_text">Your tags</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(form.categorie,{'attr': {'class': 'form-control'}}) }}
                    <label for="post_categorie">Your categorie</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(form.comments,{'attr': {'class': 'md-textarea'}}) }}
                    <label for="post_comments">Your comments</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="md-form">
                    <i class="fa fa-user prefix"></i>
                    {{ form_widget(form.author,{'attr': {'class': 'form-control'}}) }}
                    <label for="post_author">Author</label>
                </div>
            </div>
        </div>
    </div>

    {{ form_row(form._token) }}
    <div class="text-xs-center">
        <button class="btn btn-default"><i class="fa fa-paper-plane prefix"></i>  Envoyer</button>
    </div>
    {{ form_end(form,  {'render_rest': false}) }}

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
    </ul>

{% endblock %}


