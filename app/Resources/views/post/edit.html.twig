{% extends 'layout.html.twig' %}
    {% block body %}
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        <div class="divider-new">
            <h2 class="h2-responsive wow fadeInUp">Edition de post</h2>
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="md-form">
                        <i class="fa fa-pencil prefix"></i>
                        {{ form_widget(edit_form.title,{'attr': {'class': 'form-control'}}) }}
                        <label for="post_title">Your title</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="md-form">
                        <i class="fa fa-pencil prefix"></i>
                        {{ form_widget(edit_form.text,{'attr': {'class': 'md-textarea'}}) }}
                        <label for="post_text">Your text</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="md-form">
                        <i class="fa fa-pencil prefix"></i>
                        {{ form_widget(edit_form.tags,{'attr': {'class': 'form-control'}}) }}
                        <label for="post_tags">Your tags</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="md-form">
                        <i class="fa fa-user prefix"></i>
                        {{ form_widget(edit_form.categorie,{'attr': {'class': 'form-control'}}) }}
                        <label for="post_categorie">Your categorie</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="md-form">
                        <i class="fa fa-comments prefix"></i>
                        {{ form_widget(edit_form.comments,{'attr': {'class': 'md-textarea'}}) }}
                        <label for="post_comments">Your comments</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="md-form">
                        <i class="fa fa-user prefix"></i>
                        {{ form_widget(edit_form.author,{'attr': {'class': 'form-control'}}) }}
                        <label for="post_author">Author</label>
                    </div>
                </div>
            </div>
        </div>

        {{ form_row(edit_form._token) }}
        <div class="text-xs-center">
            <button class="btn btn-default"><i class="fa fa-paper-plane prefix"></i>  Envoyer</button>
        </div>
        {{ form_end(edit_form,  {'render_rest': false}) }}

    {% endblock %}
